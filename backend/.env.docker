# ==========================================
# Docker Development Environment
# ==========================================
# Bu fayl docker-compose.yml bilan ishlatiladi
# Lokal ishlatish uchun .env faylini ishlating
# ==========================================

# Django Settings
SECRET_KEY=docker-dev-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# Database (Docker PostgreSQL service)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=inventory_db
DB_USER=inventory_user
DB_PASSWORD=inventory_pass_2024
DB_HOST=db
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:80

# Email Settings (development - console backend)
# Haqiqiy email yuborish uchun quyidagilarni o'zgartiring
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@inventory.local

# Media and Static Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# AI API Keys (o'zingizning kalitlaringizni qo'ying)
OPENAI_API_KEY=
GEMINI_API_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000
